{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 800,
      "memory": 2048
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 800,
      "memory": 2048
    },
    "app/api/admin/sync-products/route.ts": {
      "maxDuration": 800,
      "memory": 2048
    }
  },
  "crons": [
    {
      "path": "/api/cron/close-inactive-conversations",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/delete-old-closed-conversations",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/daily-rollover",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/affiliate-dm",
      "schedule": "*/1 * * * *"
    }
  ]
}
